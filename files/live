set :application, '<%= @application %>'
set :user, '<%= @server_user %>'
set :repository, '<%= @repo %>'
set :branch, '<%= @branch_live %>'
set :deploy_to, '<%= @directory %>'
set :clear_cache, true
set :use_composer, true
set :copy_vendors, false
set :update_vendors, false
set :keep_releases, 3
server '<%= @server_ip %>', :web, :app
